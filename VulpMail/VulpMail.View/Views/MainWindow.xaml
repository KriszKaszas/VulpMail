        <Button x:Name="deleteButton" Content="Delete" HorizontalAlignment="Left" Margin="201,24,0,0" VerticalAlignment="Top" Width="180" Height="48" FontSize="24" FontWeight="Bold"/>
        <Button x:Name="closeButton" Content="Quit" HorizontalAlignment="Left" Margin="858,801,0,0" VerticalAlignment="Top" Width="183" Height="48" FontSize="24" FontWeight="Bold"/>
        <ComboBox x:Name="accountCbox" HorizontalAlignment="Left" Margin="858,656,0,0" VerticalAlignment="Top" Width="183"/>
        <Label Content="Account settings" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="850,24,0,0" Height="48" Width="203" FontSize="24" FontWeight="Bold"/>
        <Button x:Name="addUserButton" Content="Add User" HorizontalAlignment="Left" Margin="858,89,0,0" VerticalAlignment="Top" Width="183" Height="48" FontSize="24" FontWeight="Bold"/>
        <Label Content="E-mail Accounts" HorizontalAlignment="Left" Margin="855,604,0,0" VerticalAlignment="Top" Width="198" Height="47" FontSize="24" FontWeight="Bold"/>
        <Button x:Name="addAccountButton" Content="Add Account" HorizontalAlignment="Left" Margin="858,541,0,0" VerticalAlignment="Top" Width="183" Height="48" FontWeight="Bold" FontSize="24"/>
        <Button x:Name="removeUserButton" Content="Remove User" HorizontalAlignment="Left" Margin="858,372,0,0" VerticalAlignment="Top" Width="184" Height="48" FontWeight="Bold"/>
